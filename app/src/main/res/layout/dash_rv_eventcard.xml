<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dash_rv_card_tv_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/satisfy"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Argumentum"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/title" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_below="@id/dash_rv_card_tv_title"
        android:elevation="5.5dp"
        android:foreground="#fff"
        android:background="#fff"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/dash_rv_card_tv_desc"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/dash_rv_card_tv_title"
        android:layout_above="@id/dash_rv_card_bt_detail"
        android:elevation="15dp"
        android:fontFamily="@font/oxygen_light"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="Present your ideas and arguments logically. Be a part of this brilliant event and win prizes up to 40000"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/dash_rv_card_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/dash_rv_card_bt_detail"
        android:layout_alignEnd="@id/iv"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="#79CE93D8"
        android:elevation="5.5dp" />

    <Button
        android:id="@+id/dash_rv_card_bt_detail"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv"
        android:layout_alignParentStart="true"
        android:elevation="15dp"
        android:text="Details"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/dash_rv_card_bt_nav"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dash_rv_card_bt_detail"
        android:layout_toEndOf="@+id/dash_rv_card_bt_detail"
        android:elevation="15dp"
        android:text="Favourite"
        android:textColor="@color/colorPrimaryDark" />


</RelativeLayout>