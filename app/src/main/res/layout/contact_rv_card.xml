<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
     >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:background="#ffffff"
        android:elevation="8dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_launcher_background" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="9dp"
        android:background="#E0E0E0" />


    <Button
        android:id="@+id/whappIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignStart="@+id/name"
        android:background="@null"
        android:drawableStart="@drawable/ic_whatsapp"

        android:text="  whatsapp"
        android:textColor="#424242"

        />

    <Button
        android:id="@+id/callIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toEndOf="@+id/whappIcon"
        android:background="@null"
        android:drawableStart="@drawable/ic_call_24dp"
        android:text="Call"

        android:textColor="#424242" />


    <TextView
        android:id="@+id/designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="Brand Ambassador"
        android:textAllCaps="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:fontFamily="sans-serif-smallcaps"

        android:layout_marginBottom="3dp"
        android:textColor="#424242"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/callIcon"
        android:layout_alignStart="@+id/designation"
        android:layout_below="@id/designation"
        android:layout_marginBottom="-10dp"
        android:fontFamily="@font/oxygen"
        android:text="Yes I am"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#616161" />

</RelativeLayout>